---
const { text, href = "/" } = Astro.props;
---

<button>
  <a href={href}>
    <p>{text}</p>
  </a>
</button>

<style>
  button {
    background-color: #ef9786;
    border: none;
    padding: 10px;
    padding-left: 25px;
    padding-right: 25px;
    width: fit-content;
  }
  button:hover {
    background-color: #d2573f;
    text-decoration: none;
    outline: none;
    width: fit-content;
    border: none;
  }
  button a {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    text-decoration: none;
    color: #3c3c3c;
  }
  button p {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    text-decoration: none;
    color: #3c3c3c;
  }
</style>
