---
const { text, href = "/" } = Astro.props;
---

<button>
  <a href={href}>
    <p>{text}</p>
  </a>
</button>

<style>
  button {
    background-color: #ef9786;
    border: none;
    padding: 10px;
    padding-left: 55px;
    padding-right: 55px;
    width: fit-content;
  }
  button:hover {
    background-color: #d2573f;
    text-decoration: none;
    outline: none;
    width: fit-content;
    border: none;
  }
  button a {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-decoration: none;
    color: #3c3c3c;
  }
  button p {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-decoration: none;
    color: #3c3c3c;
  }
  @media (max-width: 700px) {
    button {
      background-color: #ef9786;
      border: none;
      padding: 5px;
      padding-left: 15px;
      padding-right: 15px;
      width: fit-content;
    }
    button:hover {
      background-color: #d2573f;
      text-decoration: none;
      outline: none;
      width: fit-content;
      border: none;
    }
    button a {
      font-family: "Open Sans", sans-serif;
      font-weight: 400;
      font-size: 12px;
      text-decoration: none;
      color: #3c3c3c;
    }
    button p {
      font-family: "Open Sans", sans-serif;
      font-weight: 400;
      font-size: 12px;
      text-decoration: none;
      color: #3c3c3c;
    }
  }
</style>
